schema {
  query: RootQueryType
}

# ...
type Image {
  height: Int
  width: Int
  absoluteFilePath: String
}

# A movie
type Movie {
  name: String
  image: Image
  id: ID
  restId: Int
  summary: String
  starring: [Person]
}

# An actor or a crew member
type Person {
  name: String
  id: ID
  restId: Int
  image: Image
  appearsIn: [Movie]
}

type RootQueryType {
  person(restId: Int): Person
  movie(restId: Int): Movie
}

